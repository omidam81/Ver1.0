                        $('#modal_form')
                            .css('display', 'block')
                            .animate({ opacity: 1, top: '50%' }, 200);
                    });
            });




            $('.ordNumber').click(function (event) {
                event.preventDefault();
                /* Запрос на сервак */
                var orderId = this.innerHTML;
