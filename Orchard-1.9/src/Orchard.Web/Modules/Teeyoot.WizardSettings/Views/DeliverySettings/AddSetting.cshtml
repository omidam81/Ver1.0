@model Teeyoot.Module.Models.DeliverySettingRecord
@{
    Layout.Title = T("Add New Setting");
}

<h2>@T("Add New Setting")</h2>

@using (Html.BeginFormAntiForgeryPost(Url.Action("AddSetting", "DeliverySettings"), FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    
    <fieldset>
        @Html.LabelFor(m => m.State, T("State"))
        @Html.EditorFor(m => m.State, new { @class = "text large" })
    </fieldset>
    <fieldset>
        @Html.LabelFor(m => m.DeliveryCost, T("Delivery Cost (only ',' decimal is allowed)"))
        @Html.EditorFor(m => m.DeliveryCost, new { @class = "text large" })
    </fieldset>
    <fieldset class="save-button">
        <button type="submit" class="primaryAction">@T("Save")</button>
        <a class="button" href="@Url.Action("Index", "DeliverySettings")">@T("Cancel")</a>
    </fieldset>
}