@model Teeyoot.WizardSettings.ViewModels.ProductStyleViewModel
@{
    Layout.Title = T("Edit Product Type").ToString();
}

<h2>@T("Edit Product Type")</h2>

@using (Html.BeginFormAntiForgeryPost())
{
    <fieldset>
        @Html.HiddenFor(m => m.Id)
        @Html.LabelFor(m => m.Name, T("Name"))
        @Html.TextBoxFor(m => m.Name, new {@class = "text large"})
    </fieldset>
    <fieldset class="save-button">
        <button type="submit" class="primaryAction">@T("Save")</button>
        <a class="button" href="@Url.Action("Index", "ProductStyle")">@T("Cancel")</a>
    </fieldset>
}