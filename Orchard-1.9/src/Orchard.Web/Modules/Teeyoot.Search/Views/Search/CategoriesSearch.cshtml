@{
    Style.Include("Search.css");
    @model Teeyoot.Search.ViewModels.SearchViewModel
}
@using Teeyoot.Module.Models;

<div class="tb- return-result">
    @if (Model.NotFoundCategories)
    {

        <h1>@T("Сategory ")@Model.Filter@T(" does not exist!")</h1>

        <div class="row categories-row">
            <div class="title-categories">
                <h2>@T("Browse Other Categories:")</h2>
            </div>
            <div class="categories">
                <ul class="menu menu-tags">
                    @foreach (var categ in Model.CampCategList)
                    {
                        if (categ.IsVisible)
                        {
                            <li>
                                <a href="~/CategoriesSearch?categoriesName=@categ.Name">@categ.Name</a>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    }
    else
    {

        <div class="row categories-row">
            <div class="title-categories">
                <h2>@T("Browse Other Categories:")</h2>
            </div>
            <div class="categories">
                <ul class="menu menu-tags">
                    @foreach (var categ in Model.CampCategList)
                    {
                        if (categ.IsVisible)
                        {
                            <li>
                                <a href="~/CategoriesSearch?categoriesName=@categ.Name">@categ.Name</a>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>

        if (Model.NotResult)
        {
            <h1>@T("No search results for the category") "@Model.Filter"!</h1>
        }
        else
        {

            int countPrice = 0;
            foreach (CampaignRecord camp in Model.CampList)
            {
                int min = camp.ProductMinimumGoal == 0 ? 1 : camp.ProductMinimumGoal;
                string sold = camp.ProductCountSold.ToString() + " sold";

                DateTime now = DateTime.Now;
                TimeSpan dif = camp.EndDate.Subtract(now);
                string dateLeft = string.Empty;
                if (dif.Days < 0)
                {
                    dateLeft = T("Ended").ToString();
                }
                else if (dif.Days <= 1)
                {
                    dateLeft = T("Ends Today").ToString();
                }
                else
                {
                    dateLeft = dif.Days + T(" days left").ToString();
                }

                float widthResult = 0;
                string width = string.Empty;
                if ((min - camp.ProductCountSold) <= 0)
                {
                    widthResult = 100;
                }
                else
                {
                    if (camp.ProductCountSold != 0)
                    {
                        float procent = (float)min / 100;
                        widthResult = camp.ProductCountSold / procent;
                    }
                    else
                    {
                        widthResult = 0;
                    }
                }
                width = (int)widthResult + "% !important";

                int maxSize = 8;
                if (Model.CampList.Count < 8)
                {
                    maxSize = Model.CampList.Count;
                }
                Model.NewRow++;

                string path = "/Media/campaigns/" + camp.Id.ToString() + "/" + camp.Products.Where(c => c.WhenDeleted == null).First().Id + "/";
                string backIMG;
                string frontIMG;
                if (camp.BackSideByDefault)
                {
                    backIMG = path + "normal/front.png";
                    frontIMG = path + "normal/back.png";
                }
                else
                {
                    backIMG = path + "normal/back.png";
                    frontIMG = path + "normal/front.png";
                }

                <div class="span-1 cell tee-previewSearch">
                    <div>
                        <div class="featurde-compaigns">
                            <div class="preview-img">
                                <div class="product-price">@camp.Products.First().CurrencyRecord.Code @Model.Price[countPrice].ToString("F", System.Globalization.CultureInfo.InvariantCulture)</div>
                                <p><a href="~/@camp.Alias"><img onmouseover="this.src='@backIMG'" onmouseout="this.src = '@frontIMG'" src="@frontIMG"></a></p>
                            </div>
                            <div class="progress-bar-search">
                                <div class="progress-bar-result" style="width: @width"></div>
                            </div>
                            <div class="campaigns-text">
                                <div class=" span-3 cell campaigns-sold-search">
                                    <div class="sold-left">@sold</div>
                                    <div class="days-right">@dateLeft</div>
                                </div>
                                <div class=" span-3 cell campaigns-text-search">
                                    <div><a href="@camp.URL">@camp.Title</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                countPrice++;
                if (Model.NewRow == maxSize)
                {
                    <div class="row categories-row">
                        <div class="title-categories">
                            <h2>@T("Browse Other Categories:")</h2>
                        </div>
                        <div class="categories">
                            <ul class="menu menu-tags">
                                @foreach (var categ in Model.CampCategList)
                                {
                                    if (categ.IsVisible)
                                    {
                                        <li>
                                            <a href="~/CategoriesSearch?categoriesName=@categ.Name">@categ.Name</a>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                }

            }

        }
    }
</div>

@using (Script.Foot())
{
    <script type="text/javascript">
        var height = $('.tee-preview:first-child img').height();
        $('.tee-preview img').css("height", height + "px !important");

        window.onresize = function (e) {
            $('.tee-preview:first-child img').css("height", "100% !important");
            var heightNew = $('.tee-preview:first-child img').height();
            $('.tee-preview img').css("height", heightNew + "px !important");
        }
    </script>
}