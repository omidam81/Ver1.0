@{
    Style.Include("Wizard.css");
    Script.Include("wizard.js");
}

<div class='lab-steps flow-steps'>
    <div id="design" onclick="slide()" class='flow-step active' tee-step-tab-select-title='item'>
        <a data-toggle='tab'>
            <span class='number'>
                1
            </span>
            <br>
            <strong>
                Design
            </strong>
            <div class='flow-step-after'>
                <div class='dot'></div>
                <div class='dot'></div>
                <div class='dot'></div>
                <div class='dot'></div>
                <div class='dot'></div>
                <div class='dot'></div>
                <div class='dot'></div>
            </div>
        </a>
    </div>
    <div id="goal" onclick="slide()" class='flow-step' tee-step-tab-select-title='goal'>
        <a data-toggle='tab'>
            <span class='number'>
                2
            </span>
            <br>
            <strong>
                Set Up
            </strong>
            <div class='flow-step-before'>
                <div class='dot'></div>
                <div class='dot'></div>
                <div class='dot'></div>
                <div class='dot'></div>
                <div class='dot'></div>
                <div class='dot'></div>
            </div>
            <div class='flow-step-after'>
                <div class='dot'></div>
                <div class='dot'></div>
                <div class='dot'></div>
                <div class='dot'></div>
                <div class='dot'></div>
                <div class='dot'></div>
                <div class='dot'></div>
            </div>
        </a>
    </div>
    <div id="description" onclick="slide()" class='flow-step' tee-step-tab-select-title='detail'>
        <a data-toggle='tab'>
            <span class='number'>
                3
            </span>
            <br>
            <strong>
                Description
            </strong>
            <div class='flow-step-before'>
                <div class='dot'></div>
                <div class='dot'></div>
                <div class='dot'></div>
                <div class='dot'></div>
                <div class='dot'></div>
                <div class='dot'></div>
            </div>
        </a>
    </div>
    <div class='clearfix'></div>
</div>
<div class="SlideContainer">
    <div class="Slides">

        <div class="Slide">
            <div class="Content">
                <h1>Slide 1</h1>
                <table>
                    <tr>
                        <td style="padding-left:100px">
                            <div><input type="text" /></div>
                            <div><input type="text" /></div>


                        </td>
                    </tr>
                </table>
                <button class="Left">NEXT PAGE</button>
            </div>
        </div>

        <div class="Slide">
            <div class="Content">

                <table>
                    <tr>
                        <td style="width:50%">
                            <img src="http://d1b2zzpxewkr9z.cloudfront.net/images/products/apparel/product_type_1_front.png">
                            @*<img  src="http://d1b2zzpxewkr9z.cloudfront.net/images/products/apparel/product_type_1_back.png">*@
                        </td>
                        <td style="width:50%; vertical-align:top">
                            <label>Sales goal</label>
                            <div class="block">
                                <input style="width:100%" type="range" id="trackbar" min="0" max="100" oninput="onChangeTrackBar()" list="volsettings" />
                                <datalist id=volsettings>
                                    <option>0</option>
                                    <option>20</option>
                                    <option>40</option>
                                    <option>60</option>
                                    <option>80</option>
                                    <option>100</option>
                                </datalist>
                            </div>
                            <table>
                                <tr>
                                    <td>
                                        <div class="block" style="width:100%">Number of shirts:</div>
                                    </td>
                                    <td>
                                        <span style="margin-left:50%" id="trackBarValue">50</span>
                                    </td>
                                </tr>
                            </table>
                            <div>
                                <span style="font-size:13px">Your goal is the number of shirts you’re aiming to sell</span>
                            </div>
                            <div>
                                <label>Set selling price</label>
                            </div>
                            <div class="block" style="width:100%; height:100px">
                                <div class="thumbnail_wrapper">
                                    <img style=" width: 100%; height: 100%;" src="http://d1b2zzpxewkr9z.cloudfront.net/images/products/apparel/product_type_1_front_small.png">
                                </div>
                            </div>
                            <div>
                                <label>Estimated profit</label>
                            </div>
                            <div>
                                <span id="total_profit" style="width:20%; color:#FF4F00; font-size:40px">500$</span>
                            </div>
                            <div></div>
                            <button class="Left">NEXT PAGE</button>
                        </td>
                        </>
                </table>
            </div>
        </div>

        <div class="Slide">
            <div class="Content">
                <h1>Slide 3</h1>
                <a href="~/">
                    <button class="Left">
                        LAUNCH
                    </button>
                </a>
            </div>
        </div>

    </div>
</div>

   




