@{
    Style.Include("designerTeeyoot.css");
    Style.Include("track.css");
}

<div class="track-order-page content">
    <div class="row">
        <div class="col-sm-3 col-sm-offset-1 hidden-xs img-car">
            <img alt="Index" src="/Media/Default/images/RecoverOrder.jpg">
        </div>
        <div class="col-sm-7" style="padding-left:0;">
            <h1 style="font-weight: bold; font-size: 2.508em;">@T("Recover Your Order")</h1>
            <p>@T("Enter your email address to see all the orders you placed using this email address for the past 60 days.")</p>

            @using (Html.BeginFormAntiForgeryPost(Url.Action("RecoverOrder", "Home")))
            {
                <div class="row">
                    <div class="col-sm-8 lookupNumber">
                        <input class="form-control input-lg input-inline-with-btn" id="email" name="email" placeholder="Email" type="text">
                    </div>
                    <div class="col-sm-2">
                        <input class="btnTrack" type="submit" value="@T("Recover orders")" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<script>
        document.title = "Recovery order | Teeyoot";
    </script>