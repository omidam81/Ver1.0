@model Teeyoot.Module.ViewModels.OrderTrackingViewModel
@{
    Style.Include("bootstrap.min.css");
    Style.Include("track.css");
}

<div class="order-tracker">
    <div class="row">
        <div class="col-md-12">
            <h1 class="h1">@T("Order Tracker")</h1>
        </div>
    </div>

