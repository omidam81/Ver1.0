@model Teeyoot.Module.ViewModels.AdminCostViewModel
@{
    Layout.Title = T("T-Shirt Cost Edit").ToString();
}

@using (Html.BeginForm("Index", "AdminSearch", FormMethod.Get))
{
    <fieldset class="bulk-actions">
        <table class="items">
            <tr>
                <th>@T("1st Screen Cost (RM)")</th>
                <td>@Html.TextBoxFor(m => m.FirstScreenCost)</td>
            </tr>
            <tr>
                <th>@T("Additional Screen Costs (RM)")</th>
                <td>@Html.TextBoxFor(m => m.AdditionalScreenCosts)</td>
            </tr>
            <tr>
                <th>@T("Ink Cost (RM per litre per colour)")</th>
                <td>@Html.TextBoxFor(m => m.InkCost)</td>
            </tr>
            <tr>
                <th>@T("Prints per litre")</th>
                <td>@Html.TextBoxFor(m => m.PrintsPerLitre)</td>
            </tr>
            <tr>
                <th>@T("Labour Cost (RM per hr)")</th>
                <td>@Html.TextBoxFor(m => m.LabourCost)</td>
            </tr>
            <tr>
                <th>@T("Labour time per colour per print (seconds)")</th>
                <td>@Html.TextBoxFor(m => m.LabourTimePerColourPerPrint)</td>
            </tr>
            <tr>
                <th>@T("Labour time per side printed per print (seconds)")</th>
                <td>@Html.TextBoxFor(m => m.LabourTimePerSidePrintedPerPrint)</td>
            </tr>
            <tr>
                <th>@T("Cost of material/ t-shirt (RM each)")</th>
                <td>@Html.TextBoxFor(m => m.CostOfMaterial)</td>
            </tr>
            <tr>
                <th>@T("Percentage Mark-Up required")</th>
                <td>@Html.TextBoxFor(m => m.PercentageMarkUpRequired)</td>
            </tr>
            <tr>
                <th>@T("DTG print price (RM)")</th>
                <td>@Html.TextBoxFor(m => m.DTGPrintPrice)</td>
            </tr>
        </table>
    </fieldset>
    <button type="submit">@T("Save")</button>
}