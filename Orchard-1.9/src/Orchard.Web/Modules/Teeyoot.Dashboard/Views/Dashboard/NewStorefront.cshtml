@{
    ViewBag.Title = "NewStorefront";
}

<section class="site__featured_full">
    <img class="featured__image" src="https://teespring-ass.s3.amazonaws.com/stores_banners/stores_default.png">
    <div class="banner__image_uploader__container">
        <form accept-charset="UTF-8" action="https://s3.amazonaws.com/teespring-storecontent/" class="s3-uploader image_uploader ss-glyphish-outlined ss-camera js-banner-uploader " data-callback-method="POST" data-callback-param="file" data-callback-url="null" enctype="multipart/form-data" method="post">
            <div style="display:none">
                <input name="utf8" type="hidden" value="✓">
            </div>
            <input id="key" name="key" type="hidden" value="Gmy8QFmEqzBtpbRQlJ0IXQ_store_header_image">
            <input id="acl" name="acl" type="hidden" value="public-read">
            <input id="AWSAccessKeyId" name="AWSAccessKeyId" type="hidden" value="AKIAIWKS5RB6X5Q5VIMQ">
            <input id="policy" name="policy" type="hidden" value="">
            <input id="signature" name="signature" type="hidden" value="Dx4JYgdmd4Pqw0Ja/WYcmLtbUr8=">
            <input id="success_action_status" name="success_action_status" type="hidden" value="201">
            <input id="X-Requested-With" name="X-Requested-With" type="hidden" value="xhr">
            <input id="file" name="file" type="file"><div class="image_uploader__title">Upload banner photo</div>
            <div class="image_uploader__subtitle">Recommended: 980px X 550px</div>
            <div class="image_uploader__title--custom">Change image</div>
        </form>
        <div class="banner__image_progress">
            <div class="progress">
                <div class="bar"></div>
            </div>
        </div>
    </div>
    <section class="store__details_container">
        <div class="store__details--edit">
            <input class="store__name--edit" id="name" maxlength="30" name="name" placeholder="Store Title" type="text">
            <textarea class="store__description--edit" id="description" maxlength="140" name="description" placeholder="Store Description (optional)"></textarea>
        </div>
    </section>
</section>