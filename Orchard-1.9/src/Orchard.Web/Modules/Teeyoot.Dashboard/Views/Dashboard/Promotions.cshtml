    <section class="account__email_settings">
        <div class="dashboard_section__header">
            <h1 class="dashboard_section__heading">Add New Promotion</h1>
        </div>
        @using (Html.BeginForm("ChangeEmail", "Dashboard", FormMethod.Post, new { model = Model }))
        {
            <div class="dashboard_section__content--padded">
                <div class="new_promotion__form">
                    <div class="new_promotion__code">
                        <div class="label__title">Promo ID (alphanumeric)</div>
                        <div class="input__group new_promotion__field">
                            <input class="form__textfield " id="code" maxlength="10" name="code" type="text" value="" />
                            <span class="input__group_addon new_promotion__generate_code ts-icon-reload" id="code" maxlength="10" name="code" type="text" value="" onclick="randomString()"  />
                        </div>
                    </div>
                    <div class="new_promotion__type">
                        <div class="label__title">Type</div>
                        <input class="form__textfield " id="code" maxlength="10" name="code" type="text" value="" />
                    </div>
                    <div class="new_promotion__discount">
                        <div class="label__title">Amount</div>
                        <div class="input__group new_promotion__field">
                            <input class="form__textfield " id="code" maxlength="10" name="code" type="text" value="" />
                            <select class="form__select_menu" id="prefix" name="prefix">
                                <option value="fixed_value">$</option>
                                <option value="percentage">%</option>
                            </select>
                        </div>
                    </div>
                    <div class="new_promotion__expiration">
                        <div class="label__title">Expiration</div>
                        <div class="input__group new_promotion__field">
                            <input class="form__textfield " id="datepicker" maxlength="10" name="code" type="text" value=""/>
                        </div>
                    </div>
                    <div class="new_promotion__save__container">
                        <input name="commit" class="t-button" type="submit" value="Add discount">
                    </div>
                </div>
            </div>
        }
    </section>


