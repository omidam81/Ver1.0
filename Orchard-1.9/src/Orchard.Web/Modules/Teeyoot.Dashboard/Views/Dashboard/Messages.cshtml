@model IEnumerable<Teeyoot.Module.Dashboard.ViewModels.MessagesIndexViewModel>

@{
    Style.Include("Message.css");
}
<div style="height:100%; margin-bottom:20%">
    <div class="status">@ViewBag.Status</div>
    <div class="dashboard-section-title">
        @T("Messages")
        <span class="menu-closer" onclick="toggleMobileMenu()"><i class="fa fa-angle-up"></i></span>
        <span class="menu-opener" onclick="toggleMobileMenu()"><i class="fa fa-angle-down"></i></span>
    </div>
    <div class="box mesTitle">Messages allow you to communicate with all your previous buyers via email. You can choose to message buyers of a particular campaign, or create a group of campaigns to message together – get started today!</div>
    <div class="box tdd">
        <div class="divRow" id="msgBoard">
            <div class="divRow" style="margin-top:2%; ">
                <div id="campaignPrintRow" class=" row">Print</div>
                <div class=" row">Name</div>
                <div class=" row">Size</div>
                <div class=" row">Last Send</div>
                <div id="sentThisWeek" class=" row">Send This Week</div>
                <div class=" row"></div>
            </div>
        </div>
        @foreach (var item in Model)
        {
            <div class="divRow divRow-mobile" >
                <div class="divRow" style="margin-top:2%; ">
                    <div id="campaignPrintRow" class=" row">Print</div>
                    <div class=" row">Name</div>
                    <div class=" row">Size</div>
                    <div class=" row">Last Send</div>
                    <div id="sentThisWeek" class=" row">Send This Week</div>
                    <div class=" row"></div>
                </div>
            </div>
            <div class="divRow">
                <div class="row"><img style=" width: 40%;margin-left:9%" src='/Media/campaigns/@item.Campaign.Id/@item.Campaign.Products[0].Id/normal/@("front.png")'></div>
                <div id="campaignName" class="row">@item.Campaign.Title</div>
                <div class="row">@item.Campaign.ProductCountSold</div>
                <div class="row">@item.LastSend</div>
                <div class="row">@item.ThisWeekSend/3</div>
                <div style="align-content:center" class="row">
                    <div>
                        @if (item.ThisWeekSend >= 10)
                        {
                            <a href="@Url.Action("CreateMessage", new { campaignId = item.Campaign.Id })"><button type="button" class="t-button" disabled="disabled">@T("Message")</button></a>
                        }
                        else
                        {
                            <a href="@Url.Action("CreateMessage", new { campaignId = item.Campaign.Id })"><button type="button" class="t-button">@T("Message")</button></a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
