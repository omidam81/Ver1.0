                    <div style="width:25%; border: 1px solid #eaeaea;text-align:center;padding-top:10px ">@Model.CampaignPromoTemplate</div>
                    @using (Html.BeginForm("UploadTemplate", "AdminMessage", new { templateName = "campaign-promote-template" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <input style="margin-left:55px" type="file" name="file" id="name" />
                        <input class="button primaryAction" type="submit" value="Upload File">
