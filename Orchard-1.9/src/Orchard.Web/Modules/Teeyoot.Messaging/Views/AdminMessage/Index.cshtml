@model Teeyoot.Messaging.ViewModels.MailChimpListViewModel
@{
    Layout.Title = T("Mandrill Settings").ToString();
    Style.Include("AdminContentMessage.css");
}
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    }

    @if (Model != null)
    {

        using (Html.BeginForm("Index", "AdminMessage", FormMethod.Get))
        {
            <fieldset class="bulk-actions">

                @Html.DropDownListFor(m => m.Culture, Model.AvailableLanguages.Select(l => new SelectListItem
                                            {
                                                Selected = l.Code == Model.Culture,
                                                Text = l.Name,
                                                Value = l.Code
                                            }))

                <button type="submit">@T("Apply")</button>
            </fieldset>
        }
        if (Model.ApiKey != null)
        {
            <div style="width:80%; margin-top:20px; margin-left:10%; margin-left:10%">
                <div style="width:100%; height:40px; font-size:15px; font-weight:500; display:flex; ">
                    <div style="width:25%;  text-align:center;padding-top:10px ">Api Key</div>
                    <div style="width:25%; border: 1px solid #eaeaea;text-align:center;padding-top:10px ">@Model.ApiKey</div>
                    <div class="delete-button">
                        <a class="button primaryAction" style="margin-right:5px" href="@Url.Action("EditMailChimpSetting", new { id = Model.Id, returnUrl = Request.Url.PathAndQuery })" title="@T("Edit")">@T("Edit")</a>
                    </div>
                </div>
                <div style="width:100%; height:40px; font-size:15px; font-weight:500; display:flex; margin-top: 10px; ">
                    <div style=" width:25%;text-align:center;padding-top:10px">Seller Template</div>
                    <div style="width:25%; border: 1px solid #eaeaea;text-align:center;padding-top:10px ">@Model.SellerTemplate</div>
                    @using (Html.BeginForm("UploadTemplate", "AdminMessage", new { templateName = "seller-template" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <input style="margin-left:55px" type="file" name="file" id="name" />
                        <input class="button primaryAction" type="submit" value="Upload File">
                    }
                    <div>
                        <a class="button delete-button" href="@Url.Action("Delete", "AdminMessage", new { templateName = "seller-template" ,  returnUrl = Request.Url.PathAndQuery })" itemprop="RemoveUrl UnsafeUrl">@T("Delete")</a>
                    </div>
                </div>
                <div style="width:100%; height:40px; font-size:15px; font-weight:500; display:flex; margin-top:10px">
                    <div style=" width:25%;  text-align:center;padding-top:10px">Welcome Template</div>
