@model IEnumerable<Teeyoot.Messaging.Models.MailChimpSettingsPartRecord>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MailChimpSettings</title>
</head>
<body>
    <div>
        <div>
            <a class="button primaryAction" href="@Url.Action("AddSetting", new { returnUrl = Request.Url.ToString() })">@T("Add New Setting")</a>
        </div>
        <div style="width:100%; height:40px; font-size:15px; font-weight:500; display:flex;margin-top:30px; ">
            <div style="width:12%; border: 1px solid #eaeaea; text-align:center;padding-top:10px ">Api Key</div>
            <div style="width:13%; border: 1px solid #eaeaea; text-align:center;padding-top:10px">Mail Chimp List Id</div>
            <div style="width:13%; border: 1px solid #eaeaea; text-align:center;padding-top:10px">WelcomeCampaignId</div>
            <div style="width:13%; border: 1px solid #eaeaea; text-align:center;padding-top:10px">WelcomeTemplateId</div>
            <div style="width:13%; border: 1px solid #eaeaea; text-align:center;padding-top:10px">AllBuyersCampaignId</div>
            <div style="width:13%; border: 1px solid #eaeaea; text-align:center;padding-top:10px">AllByersTemplateId</div>
            <div style="width:13%; border: 1px solid #eaeaea; text-align:center;padding-top:10px">Culture</div>
            <div style="width:10%; border: 1px solid #eaeaea; text-align:center;padding-top:10px">Action</div>

        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
        }
        <div>
            @foreach (var setting in Model)
            {
                
         
                <div style="width:100%; display:flex;">
                    <div style="width:12%; border: 1px solid #eaeaea;text-align:center ">@setting.ApiKey</div>
                    <div style="width:13%; border: 1px solid #eaeaea;text-align:center ">@setting.MailChimpListId</div>
                    <div style="width:13%; border: 1px solid #eaeaea;text-align:center ">@setting.WelcomeCampaignId</div>
                    <div style="width:13%; border: 1px solid #eaeaea;text-align:center ">@setting.WelcomeTemplateId</div>
                    <div style="width:13%; border: 1px solid #eaeaea;text-align:center ">@setting.AllBuyersCampaignId</div>
                    <div style="width:13%; border: 1px solid #eaeaea;text-align:center ">@setting.AllBuyersTemplateId</div>
                    <div style="width:13%; border: 1px solid #eaeaea;text-align:center ">@setting.Culture</div>



                    <div  class="related" style="width:10%; text-align:center; border: 1px solid #eaeaea;">
                        <a href="@Url.Action("EditMailChimpSetting", new { id = setting.Id, returnUrl = Request.Url.PathAndQuery })" title="@T("Edit")">@T("Edit")</a>@T(" | ")
                        <a href="@Url.Action("Delete", new { id = setting.Id, returnUrl = Request.Url.PathAndQuery })" itemprop="RemoveUrl UnsafeUrl">@T("Delete")</a>
                    </div>
                </div>



            }
        </div>

        </div>
    </body>
</html>
