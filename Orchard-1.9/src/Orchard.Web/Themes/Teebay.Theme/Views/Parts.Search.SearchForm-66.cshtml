@using Orchard.Search.ViewModels;

@using(Html.BeginForm("index", "search", new { area = "Orchard.Search" }, FormMethod.Get, new { @class = "tb-search-form" })) {    
    @Html.TextBox("q", (SearchViewModel)Model.ViewModel.Query, new { placeholder = T("Search") })
    @Html.Hidden("culture", WorkContext.CurrentCulture)
    <button type="submit">
        <img src="~/Themes/Teebay.Theme/Content/search-ico.png" /></button>
}