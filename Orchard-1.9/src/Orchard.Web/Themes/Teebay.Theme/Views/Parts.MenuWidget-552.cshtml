@Display(Model.Menu)
<a onclick="showMenu()" id="menu-icon"><img src="~/Themes/Teebay.Theme/Content/menu-icon_.png" /></a>

@using (Script.Foot())
{
    <script type="text/javascript">
        function showMenu() {
            var display = $('.widget-authenticatedMenuSG nav ul').css("display");
            var width = $('.widget-usermenuSG .menu-for-user').css("width");
            if (display !== 'none') {
                $('.widget-authenticatedMenuSG nav ul').css("display", "none");
                $('.widget-usermenuSG .menu-for-user').css("display", "none");
                $('.widget-usermenuSG .menu-for-user').css("border-bottom", "none");
            } else {
                $('.widget-authenticatedMenuSG nav ul').css("display", "block");
                $('.widget-usermenuSG .menu-for-user').css("display", "block");
                if (width !== '220px') {
                    $('.widget-usermenuSG .menu-for-user').css("border-bottom", "3px solid #0089B6");
                } else {
                    $('.widget-usermenuSG .menu-for-user').css("border-bottom", "none");
                }
            }
        }
    </script>
}